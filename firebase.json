{
  "hosting": {
    "public": "view/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/login",
        "destination": "/index.html"
      },
      {
        "source": "/article/**",
        "destination": "/index.html"
      },
      {
        "source": "**",
        "function": "api"
      }
    ]
  }
}
